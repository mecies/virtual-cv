---
import type { TagsList } from '@/types/shared';
import Tag from './tag.astro';
import Typography from './typography.astro';

export interface Props extends Omit<TagsList, 'title'> {
  title?: TagsList['title'];
}

const { tags, title } = Astro.props;
---

{
  title ? (
    <div class="flex flex-col gap-1.5">
      <Typography variant="label">{title}:</Typography>
      <div class="flex flex-wrap gap-3">
        {tags.map((tag) => (
          <Tag {...tag} />
        ))}
      </div>
    </div>
  ) : (
    <div class="flex flex-wrap gap-3">
      {tags.map((tag) => (
        <Tag {...tag} />
      ))}
      <a
        href="https://wakatime.com/@54facb64-518c-4f5a-8024-cfe17f7393bd"
        target="_blank"
        data-tooltip="Total coding activity since Nov 2018"
        data-tooltip-placement="top"
      >
        <img
          src="https://wakatime.com/badge/user/54facb64-518c-4f5a-8024-cfe17f7393bd.svg"
          alt="Total time coded since Nov 6 2018"
          class="h-6"
        />
      </a>
    </div>
  )
}
